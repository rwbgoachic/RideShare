{
  "name": "luxury-ride-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "preview": "vite preview", 
    "dev:all": "concurrently \"npm run dev\" \"nx dev gateway\" \"nx dev dispatch-service\" \"nx dev flight-tracking-service\" \"nx dev quality-service\" \"nx dev enterprise-service\" \"nx dev admin-portal\"",
    "test:all": "nx run-many --target=test --all",
    "build:all": "nx run-many --target=build --all",
    "infra:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "migrate": "nx run gateway:migrate",
    "seed": "nx run gateway:seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.8.1",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "kafkajs": "^2.2.4",
    "lucide-react": "^0.344.0",
    "next": "^14.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "react": "^18.3.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@nx/eslint": "18.0.4",
    "@nx/eslint-plugin": "18.0.4",
    "@nx/jest": "18.0.4",
    "@nx/js": "18.0.4",
    "@nx/nest": "18.0.4",
    "@nx/next": "18.0.4",
    "@nx/node": "18.0.4",
    "@nx/react": "18.0.4",
    "@nx/vite": "18.0.4",
    "@nx/workspace": "18.0.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/pg": "^8.10.9",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "concurrently": "^7.6.0",
    "jest": "^29.7.0",
    "nx": "18.0.4",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
