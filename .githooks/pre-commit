#!/bin/sh
set -e
if command -v pwsh >/dev/null 2>&1; then
  exec pwsh -NoProfile -ExecutionPolicy Bypass -File ".githooks/pre-commit.ps1"
fi
if command -v powershell >/dev/null 2>&1; then
  exec powershell -NoProfile -ExecutionPolicy Bypass -File ".githooks/pre-commit.ps1"
fi
echo "pre-commit: no pwsh/powershell found" >&2
exit 1